@model Plenamente.Models.Encuesta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="colorVerdeBack">
        <p>Crear una nueva encuesta</p>
    </div>
    <div class="centrarContenido">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label asp-for="Encuesta">@Html.DisplayFor(Model => Model.Encu_Creacion, new { @class = "" })</label>
        </div>
        <p>Fecha de vencimiento:</p>
        <br />

        @Html.EditorFor(model => model.Encu_Vence, new { htmlAttributes = new { @class = "estilosSelect" } })

        <br />
        @Html.ValidationMessageFor(model => model.Encu_Vence, "", new { @class = "text-danger" })

        <p>Estado de la encuesta:</p>
        <br />

            @Html.EditorFor(model => model.Encu_Estado, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Encu_Estado, "", new { @class = "text-danger" })

            <p>Empresa:</p>
            <br />
            @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "estilosSelect" })
            @Html.ValidationMessageFor(model => model.Empr_Nit, "", new { @class = "text-danger" })


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
