@model Plenamente.Models.ReglaHigiene

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ReglaHigiene</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Rhig_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Rhig_Archivo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rhig_Archivo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rhig_Archivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Empr_Nit, "Empr_Nit", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Empr_Nit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Campo de Registro oculto*@
            <label asp-for="ReglahigieneRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Rhig_Registro)  </label>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
