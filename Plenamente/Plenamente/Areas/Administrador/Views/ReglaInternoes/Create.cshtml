@model Plenamente.Models.ReglaInterno

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Crear una regla de interna</p>
</div>


@using (Html.BeginForm("Create", "ReglaInternoes", FormMethod.Post, new { enctype = "Multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="centrarContenido">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                Archivo
                <br />
                @*@Html.EditorFor(model => model.Rint_Archivo, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="file" name="Rint_Archivo" />
                @Html.ValidationMessageFor(model => model.Rint_Archivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>  @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" })</label>
            </div>
        </div>


        <div class="form-group">
            @*Campo de Registro oculto*@
            <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Rint_Registro)  </label>
        </div>

        <input type="submit" value="Create" class="btn btn-default" />
    </div>
}

<div class="contenidoVolver">
    <a href="@Url.Action("Index", "Reglainternoes")" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
