@model Plenamente.Models.Archivo

@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>Upload</h2>



    <body>
        <div>
            @using (Html.BeginForm("Upload", "CargaArchivo", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {<br />
             <table cellpadding="5">
                 <thead>
                     <tr>
                         <td colspan="2" style="text-align:center">Sr. DotNet Developer</td>
                     </tr>
                 </thead>
                 <tr>
                     <td colspan="2"> Please fill <span style="color:red">(*)</span> out below fields and click Apply for this position </td>
                 </tr>
                 <tr>
                     <td> @Html.LabelFor(m => m.Cump_Nombre)<b style="color:red"> *</b> </td>
                     <td> @Html.TextBoxFor(m => m.Cump_Nombre) </td>
                 </tr>
                 <tr>
                     <td> @Html.LabelFor(m => m.Cump_Aevidencia)<b style="color:red"> *</b> </td>
                     <td> @Html.TextBoxFor(m => m.Cump_Aevidencia, new { type = "file" }) </td>
                 </tr>
                 @*Campo de Registro oculto*@
                 <div class="form-group">
                     <label asp-for="Archivo" class="col-md-4 control-label">@Html.DisplayFor(Model => Model.Cump_Registro)</label>
                 </div>
                 <br />
                 <label> @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "estilosSelect" }) </label>
                 <br />
                 <label> @Html.ValidationMessageFor(model => model.Empr_Nit, "", new { @class = "text-danger" }) </label>
                 <tr>
                     <td colspan="2" style="text-align:right"> <input type="submit" id="Apply" value="Apply" /> </td>
                 </tr>
             </table>}
        </div>
    </body>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
