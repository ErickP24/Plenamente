@using Plenamente.Models.ViewModel

@model Plenamente.Models.Cumplimiento
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="col-md-12">
    @using (Html.BeginForm("ResouceUpload", "UploadCump", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <form class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />
            <h4><strong> Recuerde : Solo se aceptan documentos en formato Pdf,Word,Excel,PowerPoint y que el tamaño del archivo no supere 1MB</strong></h4>
            @Html.HiddenFor(model => model.Cump_Id )
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Cump_Aevidencia, htmlAttributes: new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    <input type="file" id="CoverpageModule" name="upload" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <center><button class="btn btn-primary" name="singin" type="submit">Subir</button></center>
                </div>
            </div>
        </form>
    }
</div>

