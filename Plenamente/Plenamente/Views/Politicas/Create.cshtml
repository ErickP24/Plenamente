@model Plenamente.Models.Politica

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Crear una nueva politica </p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="centrarContenido">
         <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                Subir Archivo
                @Html.EditorFor(model => model.Poli_Archivo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Poli_Archivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>  @Html.DropDownList("Empr_Nit", null, htmlAttributes: new { @class = "form-control" })</label>
            </div>
        </div>

        <div class="form-group">
            @*Campo de Registro oculto*@
            <label asp-for="CargoRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Poli_Registro)  </label>
        </div>
                <input type="submit" value="Create" class="btn btn-default" />

    </div>
}

<div class="contenidoVolver">
    <a href="@Url.Action("Index", "Politicas", null)" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

