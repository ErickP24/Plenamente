@model PagedList.IPagedList<Plenamente.Models.Empresa>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}


<div class="colorVerdeBack">
    <p>Empresa</p>
</div>
<div class="contenedorBotones">
    <form asp-action="Index" method="get">
        <input type="text" id="buscarDato" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Buscar" class="btn btn-success tamañoBoton" />
        <a href="@Url.Action("Index", "Empresas")" class="ayudaTitulos"><span>Ver todos</span><img src="~/Imagenes/binoculares.png" /><p>Ver</p></a>
        <a href="@Url.Action("Create", "Empresas")" class="ayudaTitulos"><span>Crear Empresa</span><img src="~/Imagenes/archivo.png" /><p>Crear</p></a>
    </form>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table id="tablaVista" class="tablaVista">
    <thead class="cabeceraTabla">
        <tr>
            <th class="colorVerde">
                Empresa
            </th>
            <th class="colorVerde">
                Dirección
            </th>
            <th class="colorVerde">
                ARL
            </th>
            <th class="colorVerde">
                Afiliación ARL
            </th>
            <th class="colorVerde">
                Total Trabajadores
            </th>
            <th class="colorVerde">

            </th>
        </tr>
    </thead>
    <tbody class="cuerpoTabla">

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Empr_Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empr_Dir)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arl.Arl_Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empr_Afiarl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empr_Ttrabaja)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Empr_Nit }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Empr_Nit })
                </td>
            </tr>
        }
    </tbody>

</table>
<div class="paginacionLista">
    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>