@model Plenamente.Models.Empresa

@{
ViewBag.Title = "Edit";
Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p>Editar Empresa</p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="centrarContenido">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Empr_Nit)

    <div class="form-group">
        <div class="col-md-10">
            Nombre
            @Html.EditorFor(model => model.Empr_Nom, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Empr_Nom, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Dirección
            @Html.EditorFor(model => model.Empr_Dir, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Empr_Dir, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Aseguradora de riesgos laborales
            @Html.DropDownList("Arl_Id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Arl_Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Clase ARL
            @Html.DropDownList("Carl_Id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Carl_Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            No afiliación ARL
            @Html.EditorFor(model => model.Empr_Afiarl, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Empr_Afiarl, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Total de trabajadores
            @Html.EditorFor(model => model.Empr_Ttrabaja, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Empr_Ttrabaja, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @*Campo de Registro oculto*@
        <label asp-for="EmpresaRegistro" class="col-md-4 control-label" hidden>@Html.DisplayFor(Model => Model.Empr_Registro)  </label>
    </div>


    <br />

    <br />

    <input type="submit" value="Guardar" class="btn btn-default" />

</div>
}

<div class="contenidoVolver">
    <a href="@Url.Action("Index", "Empresas")" class="ayudaTitulos"><span>Volver a la lista</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" /><p></p></a>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}