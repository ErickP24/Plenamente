@model IEnumerable<Plenamente.Models.ViewModel.CriteriosViewModel>

@{
    ViewBag.Title = "Autoevaluación SST";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}
<div class="colorVerdeBack">
    <p>Autoevaluación SST</p>
</div>


<div class="contenidoCuerpo centrarContenido">


    @foreach (var criterio in Model)
    {
        if (criterio.Estandares != null && criterio.Estandares.Count > 0)
        {
            <hr />
            <h2 class="colorVerdeBack1">@criterio.Nombre</h2>
                <div class="panel panel-default plegable">
                    <div class="panel-body" style="background: #e2d8d8;">

                        <div class="well well-lg" style="padding-left: 30px; background: #e2d8d8;">


                            @foreach (var estandar in criterio.Estandares)
                            {
                                if (estandar.Elementos != null && estandar.Elementos.Count > 0)
                                {
                                    <br />
                                    <h3>@estandar.Nombre</h3>
                                    <br />
                                    foreach (var elemento in estandar.Elementos)
                                    {
                                    <ul class="list-group">
                                        <li class="list-group-item " style="background: darkgray; border: 2px solid #000000">
                                            <i class="fa @(elemento.ExisteCumplimiento ? "fa-check" : "fa-window-minimize")" style="color: @(elemento.ExisteCumplimiento ? "green" : "darkslategray");"></i>
                                            <a href="@Url.Action("Cumplimiento", "AutoEvaluacion", new { idItem = elemento.Id })" title="@elemento.Descripcion" style="color: @(elemento.ExisteCumplimiento ? "green" : "darkslategray");">
                                                @elemento.Descripcion
                                                <i class="fas fa-chevron-right"> Ingrese Aqui</i>

                                            </a>
                                            
                                        </li>

                                    </ul>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
                }
                }
                <hr />
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                        <input type="button" onclick="location.href = '@Url.Action("GuardarTerminar")';" value="Guardar y terminar" class="btn btn-default" />
                    </div>
                </div>
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <label class="text-danger">@ViewBag.TextError</label>
                    <label class="text-success">@ViewBag.TextExitoso</label>
                </div>
            </div>
            <div class="contenidoVolver">
                <a href="@Url.Action("Index", "Home")" class="ayudaTitulos">
                    <span>Volver al inicio</span> <img src="~/Imagenes/flecha-hacia-la-izquierda.png" />
                </a>
            </div>
