@model Plenamente.Models.ApplicationUser
@{
    ViewBag.Title = "EditarUser";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="colorVerdeBack">
    <p> Editar Usuario </p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="centrarContenido">
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            Nombre
            @Html.EditorFor(model => model.Pers_Nom1, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Pers_Nom1, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Apellido
            @Html.EditorFor(model => model.Pers_Apel1, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Pers_Apel1, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Tipo Documento
            @Html.DropDownList("Tdoc_Id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tdoc_Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            No Documento
            @Html.EditorFor(model => model.Pers_Doc, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Pers_Doc, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Género
            @Html.DropDownList("Gene_Id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Gene_Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Correo
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            Contraseña
            @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}